/* pages/mine/mine.wxss */
.mine-top {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mine-top2 {
  widows: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
}

.head {
  margin: 0rpx 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.top-right {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.top-right view {
  color:#454545;
  line-height: 45rpx;
  font-size: 30rpx;
  min-width: 160rpx;
}

.top-right view button {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.back-css {
  margin-bottom: 20rpx;
  width: 92%;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: white;
  justify-content: space-between;
  display: flex;
  flex-direction: column;
}

.title-css {
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
}

.line-css {
  height: 180rpx;
  justify-content: space-between;
  align-items: center;
  display: flex;
  flex-direction: row;
  padding: 30rpx 30rpx;
}

.item-css {
  width: 100rpx;
  height: 100rpx;
  /* background: rosybrown; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-css text {
  font-size: 25rpx;
  margin-top: 8rpx;
  color: gray;
}

.item-css image {
  width: 50rpx;
  height: 50rpx;
}

.bottomAD-css {
  width: 92%;
  height: 400rpx;
  background-color: white;
  border-radius: 12rpx;
}

