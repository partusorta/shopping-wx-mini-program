/* pages/shoppingCart/shoppingCart.wxss */

.order-detail {
  display: flex;
  flex-direction: column;
  margin: 0rpx 20rpx;
  padding-bottom: 20rpx;
}

.select-css {
  width: 40rpx;
  height: 100rpx;
}

.goods-item {
  margin-top: 20rpx;
  background-color: white;
  height: 200rpx;
  color: #454545;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
}

.goods-count {
  width: 150rpx;
  margin-left: 70%;
  text-align: right;
}

.goods-price {
  color: #fc7146;
  width: 150rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.goods-name {
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 95%;
}

.goods-name text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  border-top: solid 1rpx #f7f7f7;
  display: flex;
  flex-direction: row;
}

.bottom-total {
  background-color: white;
  color: black;
  text-align: center;
  width: 33.3%;
  line-height: 100rpx;
  font-size: 33rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-total image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.bottom-topay {
  background-color: #62C9D8;
  color: white;
  text-align: center;
  width: 33.3%;
  line-height: 100rpx;
  font-size: 33rpx;
}

/*  */
.right-css {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30%;
}
/*  */
.right-css text {
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #454545;
  flex: 0.93;
}
/*  */
.num-btn {
  width: 50rpx;
  height: 50rpx;
}
/*  */
.item-num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}